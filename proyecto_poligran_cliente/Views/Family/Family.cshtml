@model IEnumerable<UsuarioModel>
@using proyecto_poligran_cliente.Models;
@{
    Layout = "_Layout";
}
@foreach (var usuario in Model)
{
    <div class="card shadow mb-4">
        <a href="@("#usuario" + usuario.id)" class="d-block card-header py-3" data-toggle="collapse" role="button"
        aria-expanded="true" aria-controls="@("usuario" + usuario.id)">
            <h6 class="m-0 font-weight-bold text-primary">@usuario.Nombre_completo</h6>
        </a>

        <div class="collapse" id="@("usuario" + usuario.id)">
            <div class="form-group row ml-2 mr-2">
                <div class="col-md-3 mt-4 ">
                    <input class="form-control form-control-user" type="text" name="Nombre_completo" id="Nombre_completo"
                    value="@usuario.Nombre_completo" />
                </div>

                <div class="col-md-3 mt-4">
                    <input class="form-control form-control-user" type="text" name="Nombre_completo" id="Nombre_completo"
                    value="@(usuario.Genero == "F" ? "Femenino" : "Masculino")" />
                </div>

                <div class="col-md-3 mt-4">
                    <input class="form-control form-control-user" type="number" name="Nombre_completo" id="Nombre_completo"
                    value="@usuario.Edad" />
                </div>

                <div class="col-md-3 mt-4">
                    <input class="form-control form-control-user" type="email" name="Nombre_completo" id="Nombre_completo"
                    value="@usuario.Correo_electronico" />
                </div>
            </div>
            <div class="form-group row ml-2 mr-2">
                <div class="col-md-4">
                    <select class="form-control form-control-user elemento-salud" data-userid="@usuario.id">
                        <option value="Control">Controles de salud</option>
                        <option value="Indicadores">Indicadores de salud</option>
                        <option value="Condicion">Condiciones de salud</option>
                        <option value="Laboratorio">Resultados de laboratorio</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex">
                    <span>Fecha inicio</span>
                    <input class="form-control form-control-user" value="@DateTime.Today.ToString("yyyy/MM/dd")" type="date" name="fecha-inicio" id="fecha-inicio">
                </div>
                <div class="col-md-4 d-flex">
                    <span>Fecha inicio</span>
                    <input class="form-control form-control-user" value="@DateTime.Today.AddDays(30).ToString("yyyy/MM/dd")" type="date" name="fecha-inicio" id="fecha-inicio">
                </div>
            </div>
            <div id="@(@usuario.id + "-card-body")" class="card-body">
                
            </div>
        </div>
    </div>
}
